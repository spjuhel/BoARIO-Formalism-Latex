@inproceedings{weeks-2012-calcul-averag,
	title        = {Calculating Average Annual Time of Submergence for Flooding on Roads},
	author       = {Weeks, W.D.},
	pages        = {1109--1116},
	note         = 00000,
	abstract     = {When considering the disruption to traffic on roads, the flood immunity is usually considered as the design criterion. However in addition to the flood immunity, the time of closure is at least equally important. In fact a road with a low level of flood immunity may result in less disruption than another with higher flood immunity if the times of closure are shorter. Times of closure on roads can be expressed as the time of closure for a defined large design flood, such as the 2\% AEP flood or the duration for a major historical flood. The times can also be expressed as an average annual time of closure (AATOC), which depends on the frequency of closure and the duration of closure on each event. These two parameters along with the flood immunity can give a better indication of disruption to transport than flood immunity alone. AATOC can be considered similarly to the average annual time of submergence (AATOS), defined as the times when there is any water on the road, no matter how shallow. Calculation of the AATOC has typically been calculated using a procedure described in the Austroads Waterway Guide, which relies on calculations using design flood hydrographs. Experience with this procedure has shown that it typically underestimates the AATOC, especially where the flood immunity is low, because observed floods will often have a longer duration than design floods and also because there may be more than one flood in any year that closes the road. This paper outlines investigations into the calculation of AATOC and provides guidance on a more reliable method for calculating AATOC for application in studies into the flood immunity of roads. 2012 Engineers Australia.},
	date         = 2012,
	eventtitle   = {Proceedings of the 34th {{Hydrology}} and {{Water Resources Symposium}}, {{HWRS}} 2012},
	file         = {/home/samuel/Zotero/storage/WM33KM2T/display.html}
}
