@article{fleming-munoz-2019-econom-vulner,
	title        = {Economic Vulnerability and Regional Implications of a Low Carbon Emissions Future},
	author       = {Fleming-Mu{\~n}oz, David A. and Poruschi, Lavinia and Measham, Thomas and Meyers, Jacqui and Moglia, Magnus},
